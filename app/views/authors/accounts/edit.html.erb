<div class="row"> 
  <% if current_author.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(current_author.errors.count, "error") %> </h2>

      <ul>
      <% current_author.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
</div>
<div class="row author-edit">
  <%= render 'info' %>
  <%= render 'password' %>
</div>