<tr>
	<td><%= link_to post.title, authors_post_path(post) %></td>
	<td></td>
	<% if post.published? %>
		<td><%= link_to 'Unpublish', unpublish_authors_post_path(post), method: :get, class: 'btn btn-sm  btn-primary' %></td>
	<% else %>
		<td><%= link_to 'Publish', publish_authors_post_path(post), method: :get, class: 'btn btn-sm  btn-success' %></td>
	<% end %>
	<td><%= link_to 'Edit', edit_authors_post_path(post), class: 'btn btn-sm  btn-warning' %></td>
	<td><%= link_to 'Delete', authors_post_path(post), class: 'btn btn-sm  btn-danger',  method: :delete, data: { confirm: 'JesteÅ› pewien?' } %></td>

</tr>